<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartNewWorkout">

  <Button
      android:id="@+id/ownWorkoutButton"
      android:layout_width="250sp"
      android:layout_height="wrap_content"
      android:text="Add your own workout"
      app:layout_constraintBottom_toTopOf="@+id/templateButton"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <Button
      android:id="@+id/templateButton"
      android:layout_width="250sp"
      android:layout_height="wrap_content"
      android:text="Use a template"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/ownWorkoutButton" />

</androidx.constraintlayout.widget.ConstraintLayout>