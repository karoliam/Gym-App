            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/exercise4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="20dp"
            android:text="TextView"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/weightEditText4"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/weightEditText3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="37dp"
            android:ems="10"
            android:hint="@string/weightHint"
            android:inputType="number"
            app:layout_constraintBottom_toBottomOf="@+id/repsEditText3"
            app:layout_constraintEnd_toStartOf="@+id/repsEditText3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/repsEditText3"
            app:layout_constraintVertical_bias="0.0" />

        <EditText
            android:id="@+id/repsEditText3"
            android:layout_width="0dp"
            android:layout_height="49dp"
            android:layout_marginTop="179dp"
            android:layout_marginEnd="44dp"
            android:ems="10"
            android:hint="@string/repsHint"
            android:inputType="number"
            app:layout_constraintEnd_toStartOf="@+id/setsEditText3"
            app:layout_constraintStart_toEndOf="@+id/weightEditText3"
            app:layout_constraintTop_toTopOf="@+id/exercise2" />

        <TextView
            android:id="@+id/exercise3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="16dp"
            android:text="TextView"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/weightEditText3"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/setsEditText3"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginEnd="24dp"
            android:ems="10"
