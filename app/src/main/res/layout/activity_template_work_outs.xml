            app:layout_constraintStart_toEndOf="@+id/repsEditText" />

        <EditText
            android:id="@+id/repsEditText"
            android:layout_width="0dp"
            android:layout_height="49dp"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="44dp"
            android:layout_marginBottom="44dp"
            android:ems="10"
            android:hint="@string/repsHint"
            android:inputType="number"
            app:layout_constraintBottom_toTopOf="@+id/exercise2"
            app:layout_constraintEnd_toStartOf="@+id/setsEditText"
            app:layout_constraintStart_toEndOf="@+id/weightEditText"
            app:layout_constraintTop_toTopOf="@+id/exercise1" />

        <Button
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/saveButton"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/setsEditText4"

            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>




