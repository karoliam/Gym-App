<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.project.OwnWorkoutActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="210dp"
        android:background="@android:color/darker_gray" />

    <EditText
        android:id="@+id/setTextExercise"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="156dp"
        android:fontFamily="@font/roboto"
        android:hint="Your exercise"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/setTextWeight"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="104dp"
        android:fontFamily="@font/roboto"
        android:hint="Weight"
        android:inputType="number"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/setTextSets"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="52dp"
        android:fontFamily="@font/roboto"
        android:hint="sets"
        android:inputType="number"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/setTextReps"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:fontFamily="@font/roboto"
        android:hint="reps"
        android:inputType="number" />


    <Button
        android:id="@+id/button_insert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/setTextExercise"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="15dp"
        android:layout_toEndOf="@id/setTextExercise"
        android:fontFamily="@font/work_sans"
        android:text="insert" />

    <Button
        android:id="@+id/button_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/button_insert"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="40dp"
        android:layout_toEndOf="@+id/setTextSets"
        android:fontFamily="@font/work_sans"
        android:text="clear" />

</RelativeLayout>