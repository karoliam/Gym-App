<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">


        <EditText
            android:id="@+id/paino_view"
            android:layout_width="159dp"
            android:layout_height="65dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="240dp"
            android:layout_marginEnd="32dp"
            android:ems="10"
            android:hint="kg"
            android:inputType="number"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/pituus_view"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/profiili_kuva"
            android:layout_width="148dp"
            android:layout_height="146dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/muscle_pic_round" />

        <EditText
            android:id="@+id/pituus_view"
            android:layout_width="159dp"
            android:layout_height="65dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="54dp"
            android:ems="10"
            android:hint="cm"
            android:inputType="number"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profiili_kuva" />

        <Button
        android:id="@+id/save_button"
        android:layout_width="160dp"
        android:layout_height="72dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        android:text="SAVE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/nimi_view"
            android:layout_width="192dp"
            android:layout_height="78dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="108dp"
            android:layout_marginEnd="16dp"
            android:hint="Name"
            android:inputType="text"
            android:text=""
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/profiili_kuva"
            app:layout_constraintTop_toTopOf="parent" />




    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>